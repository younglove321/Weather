<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:id="@+id/Layout0"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeatherMainActivity">


    <ImageView
        android:id="@+id/weather_title"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:layout_weight="1"
        android:src="@drawable/weather_title"/>

    <TextView
        android:fontFamily="@font/bmeuljirottf"
        android:layout_marginLeft="30dp"
        android:textColor="#1853c9"
        android:textSize="20dp"
        android:id="@+id/tv_time_announce"
        android:text="00시 발표"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_today_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            />


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_now"
            android:layout_marginLeft="40dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="#bdd7ee">

        <TextView
            android:id="@+id/tv_now_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="#5b9bd5"
            android:textStyle="bold"
            android:text="현재 시각"
            />

            <TextView
                android:id="@+id/tv_now_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljirottf"
               android:textSize="30dp"
                android:layout_marginLeft="25dp"
                android:textColor="#000000"
                android:text="현재 날씨"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/bubble_ment"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_ment"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="18dp"
                android:paddingLeft="50dp"
                android:paddingTop="50dp"
                android:layout_width="260dp"
                android:layout_height="200dp"
                android:textColor="#e33930"
                android:text="눈송이의 멘트"/>

        </FrameLayout>

        <TextView
            android:fontFamily="@font/bmeuljirottf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:id="@+id/tv_test"
            android:textSize="20dp"
            android:text="  "/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/bmeuljirottf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cmp_y"
            android:textSize="20dp"
            android:text="  오늘 어제보다 "/>

        <TextView
            android:id="@+id/tv_now_rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/bmeuljirottf"
            android:textSize="20dp"
            android:text="  오늘 강수확률 " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:fontFamily="@font/bmeuljirottf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_now_dust"
            android:textSize="20dp"
            android:text="  오늘 미세먼지 "/>
        <TextView
            android:fontFamily="@font/bmeuljirottf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_now_ozone"
            android:layout_marginLeft="70dp"
            android:textSize="20dp"
            android:text="오늘 오존 "/>
    </LinearLayout>


        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:background="#ecaecb"
            android:fontFamily="@font/bmeuljirottf"
            android:text="2시간 빠른 예보"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/layout_afterh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_afterh0"
                    android:textSize="15dp"
                    android:textColor="#5b9bd5"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:text="1시간 후 예보"/>

                <ImageView
                    android:id="@+id/iv_after_img0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:id="@+id/tv_afterh0_info"
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="#000000"
                    android:text="예보내용1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_afterh1"
                    android:textSize="15dp"
                    android:textColor="#5b9bd5"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:text="2시간 후 예보"/>

                <ImageView
                    android:id="@+id/iv_after_img1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:id="@+id/tv_afterh1_info"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="#000000"
                    android:text="예보내용2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>





    <TextView
        android:fontFamily="@font/bmeuljirottf"
        android:layout_marginLeft="5dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="50dp"
        android:background="#e39632"
        android:textColor="#ffffff"
        android:id="@+id/tv_today_date"
        android:textSize="23dp"
        android:text="오늘 날짜"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/layout_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp">
        <ImageView
            android:id="@+id/iv_today_am_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_today_am"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#deebf7">
                <TextView
                    android:id="@+id/tv_td_temp0"
                    android:textSize="20dp"
                    android:textColor="#5b9bd5"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:text="오늘 오전 온도"/>
                <TextView
                    android:id="@+id/tv_td_info0"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="#000000"
                    android:text="흐리고 비 강수확룔 70%"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp">

            <ImageView
                android:id="@+id/iv_today_pm_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_today_pm"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#deebf7">
                <TextView
                    android:id="@+id/tv_td_temp1"
                    android:textSize="20dp"
                    android:textColor="#5b9bd5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:layout_margin="10dp"
                    android:text="오늘 오후 온도"/>
                <TextView
                    android:id="@+id/tv_td_info1"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:text="오늘 오후 정보"/>

            </LinearLayout>
            </LinearLayout>
    </LinearLayout> <!--today-->

    <TextView
        android:fontFamily="@font/bmeuljirottf"
        android:layout_marginLeft="5dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="50dp"
        android:background="#e39632"
        android:textColor="#ffffff"
        android:id="@+id/tv_tomorrow_date"
        android:textSize="23dp"
        android:text="내일 날짜"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layout_tomorrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp">
            <ImageView
                android:id="@+id/iv_tom_am_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_tom_am"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#deebf7">
                <TextView
                    android:id="@+id/tv_tom_temp0"
                    android:textSize="20dp"
                    android:textColor="#5b9bd5"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:text="내일 오전 온도"/>
                <TextView
                    android:id="@+id/tv_tom_info0"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="#000000"
                    android:text="흐리고 비 강수확룔 70%"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp">
            <ImageView
                android:id="@+id/iv_tom_pm_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_tom_pm"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#deebf7">
                <TextView
                    android:id="@+id/tv_tom_temp1"
                    android:textSize="20dp"
                    android:textColor="#5b9bd5"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:text="내일 오후 온도"/>
                <TextView
                    android:id="@+id/tv_tom_info1"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="#000000"
                    android:text="흐리고 비 강수확룔 70%"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout> <!--tomorrow-->

    <TextView
        android:fontFamily="@font/bmeuljirottf"
        android:layout_weight="5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text=""
        android:id="@+id/textView"
        android:maxLines = "100"
        android:scrollbars = "vertical"
        android:layout_above="@+id/button" />

    <Button
        android:id="@+id/week_btn"
        android:fontFamily="@font/bmeuljirottf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ecaecb"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="주간 날씨 보기"/>

    <Button
        android:id="@+id/video_btn"
        android:fontFamily="@font/bmeuljirottf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2e6bb"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="날씨 영상 보기"/>

</LinearLayout>

</ScrollView>