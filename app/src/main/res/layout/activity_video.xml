<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/Layout2"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".WeatherMainActivity">



        <ImageView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:layout_weight="1"
            android:src="@drawable/video_title"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/week" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmeuljirottf"
                    android:text="버튼을 누르면 영상이 재생됩니다"
                    android:textColor="#5b68b3"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/go_today"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/video_today"/>
        <ImageView
            android:id="@+id/go_tomorrow"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/video_tom"/>

        <ImageView
            android:id="@+id/go_dust"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:src="@drawable/video_dust"/>

    </LinearLayout>
    </LinearLayout>
</ScrollView>

